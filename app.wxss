/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

/*表单通用样式*/
.form-item{
    display: flex;
    flex-direction: row;
    align-items: center;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    padding: 10px 5px;
}

.form-item-title{
    flex: 1;
    font-size: 18px;
    display: inline;
}

.form-item-input{
    width: 70%;
    font-size: 17px;
}